{
  "name": "silex-website-builder",
  "description": "Free and easy website builder for everyone.",
  "version": "3.0.0-alpha.1",
  "version:backwardcompat": "3.0.0",
  "author": {
    "name": "Alex Hoyau",
    "url": "https://lexoyo.me/"
  },
  "main": "dist/server/index.js",
  "bin": {
    "silex": "./dist/server/index.js"
  },
  "license": "(GPL-3.0 OR MPL-2.0)",
  "engines": {
    "node": ">=12"
  },
  "watch": {
    "build:css:debug": {
      "patterns": [
        "src/css/"
      ],
      "extensions": "scss"
    },
    "build:html:debug": {
      "patterns": [
        "src/html/"
      ],
      "extensions": "pug"
    },
    "build:client:debug": {
      "patterns": [
        "src/ts/client/"
      ],
      "extensions": "ts"
    },
    "build:server:debug": {
      "patterns": [
        "src/ts/server/"
      ],
      "extensions": "ts"
    }
  },
  "scripts": {
    "release": "",
    "watch": "npm-watch",
    "start": "node dist/server/index.js",
    "start:debug": "cross-env SILEX_DEBUG=true nodemon --watch dist/server dist/server/index.js",
    "prepare": "npm run lint && echo 'FIXME: fix tests' && npm run build",
    "preversion": "npm run prepare",
    "build": "run-s build:css:release build:html build:client:release build:server:release",
    "webpack": "webpack --config webpack.config.js",
    "build:css:release": "sass --load-path ../../node_modules --load-path node_modules --no-source-map src/css/index.scss dist/client/css/admin.css",
    "build:css:debug": "sass --load-path ../../node_modules --load-path node_modules src/css/index.scss dist/client/css/admin.css",
    "build:html": "pug src/html/index.pug --out dist/client/ --no-debug",
    "build:html:debug": "pug src/html/debug.pug --pretty --out dist/client/ && mv dist/client/debug.html dist/client/index.html",
    "build:client:release": "webpack --config webpack.config.js",
    "build:client:debug": "webpack --config webpack.debug.config.js",
    "build:server:release": "tsc -p tsconfig-server-release.json",
    "build:server:debug": "SILEX_DEBUG=true tsc -p tsconfig-server-debug.json",
    "lint": "eslint 'src/ts/**/*.ts'",
    "lint:fix": "npm run lint -- --fix",
    "test": "node --experimental-vm-modules `node_modules jest`/jest/bin/jest.js",
    "test:watch": "node --experimental-vm-modules `node_modules jest`/jest/bin/jest.js --watch"
  },
  "dependencies": {
    "@silexlabs/grapesjs-directus-storage": "^1.0.11",
    "@silexlabs/grapesjs-fonts": "1.0.7",
    "@silexlabs/grapesjs-symbols": "1.0.18",
    "@silexlabs/grapesjs-ui-suggest-classes": "1.0.19",
    "adm-zip": "0.5.10",
    "body-parser": "1.20.1",
    "compression": "1.7.4",
    "cookie-parser": "1.4.6",
    "cookie-session": "2.0.0",
    "cross-env": "7.0.3",
    "cssurl": "^1.3.0",
    "express": "4.18.2",
    "express-force-ssl": "0.3.2",
    "formidable": "2.1.1",
    "grapesjs": "0.20.4",
    "grapesjs-blocks-basic": "1.0.1",
    "grapesjs-custom-code": "1.0.1",
    "grapesjs-plugin-forms": "2.0.5",
    "grapesjs-style-filter": "1.0.1",
    "lit-html": "2.6.1",
    "mkdirp": "2.1.3",
    "node_modules-path": "2.0.7",
    "node-fetch": "^2.6.9",
    "normalize.css": "8.0.1",
    "object-path": "0.11.8",
    "promise-sequential": "1.1.1",
    "sass": "1.58.0",
    "serve-static": "1.15.0"
  },
  "devDependencies": {
    "@types/express": "4.17.17",
    "@types/express-session": "1.17.5",
    "@types/jest": "29.4.0",
    "@types/jquery": "3.5.16",
    "@types/node": "18.13.0",
    "@typescript-eslint/eslint-plugin": "^5.51.0",
    "@typescript-eslint/parser": "^5.51.0",
    "babel-jest": "29.4.2",
    "css-loader": "6.7.3",
    "eslint": "8.34.0",
    "file-loader": "6.2.0",
    "jest": "29.4.2",
    "jest-environment-jsdom": "^29.4.2",
    "livereload": "^0.9.3",
    "nodemon": "2.0.20",
    "npm-run-all": "4.1.5",
    "npm-watch": "0.11.0",
    "pug-cli": "1.0.0-alpha6",
    "style-loader": "3.3.1",
    "ts-jest": "29.0.5",
    "ts-loader": "9.4.2",
    "typescript": "4.9.5",
    "webpack": "5.75.0",
    "webpack-cli": "5.0.1"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/silexlabs/Silex.git"
  },
  "keywords": [
    "page builder",
    "cloud",
    "SaaS",
    "template builder",
    "web page editor",
    "html5 editor",
    "free",
    "open source",
    "online editor",
    "silex website",
    "free",
    "website builder",
    "online",
    "silex website builder",
    "silex.me",
    "silex",
    "html editor",
    "free website builder",
    "silex cms",
    "online website builder open source",
    "Create a free website",
    "Wix.com open source alternative",
    "designer",
